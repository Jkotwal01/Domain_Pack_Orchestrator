  "extraction_patterns": [
    {
      "pattern": "Case No\\.: (?P<case_number>[A-Z0-9-]+)",
      "entity_type": "CASE",
      "attribute": "case_number",
      "confidence": 0.95
    },
    {
      "pattern": "Client: (?P<name>[A-Za-z\\s,]+)",
      "entity_type": "CLIENT",
      "attribute": "name",
      "confidence": 0.9
    },
    {
      "pattern": "Attorney: (?P<name>[A-Za-z\\s]+), Bar #(?P<bar_number>[0-9]+)",
      "entity_type": "ATTORNEY",
      "attribute": "name",
      "confidence": 0.95
    },
    {
      "pattern": "Court: (?P<court_name>[A-Za-z\\s]+)",
      "entity_type": "COURT",
      "attribute": "name",
      "confidence": 0.9
    },
    {
      "pattern": "Document Type: (?P<doc_type>[A-Za-z\\s]+)",
      "entity_type": "LEGAL_DOCUMENT",
      "attribute": "document_type",
      "confidence": 0.85
    },
    {
      "pattern": "PAN[\\s:]*([A-Z]{5}[0-9]{4}[A-Z]{1})",
      "entity_type": "PAN",
      "attribute": "pan_number",
      "confidence": 0.95
    },
    {
      "pattern": "Permanent Account Number[\\s:]*([A-Z]{5}[0-9]{4}[A-Z]{1})",
      "entity_type": "PAN",
      "attribute": "pan_number",
      "confidence": 0.9
    },
    {
      "pattern": "Tax ID[\\s:]*([A-Z]{5}[0-9]{4}[A-Z]{1})",
      "entity_type": "PAN",
      "attribute": "pan_number",
      "confidence": 0.85
    },
    {
      "pattern": "Amount[\\s:]*[₹$€£]?([0-9,]+(\\.[0-9]{2})?)",
      "entity_type": "FINANCIAL_TRANSACTION",
      "attribute": "amount",
      "confidence": 0.9
    },
    {
      "pattern": "Date[\\s:]*([0-9]{1,2}/[0-9]{1,2}/[0-9]{4})",
      "entity_type": "DATE",
      "attribute": "date",
      "confidence": 0.85
    },
    {
      "pattern": "Judge[\\s:]*([A-Za-z\\s]+)",
      "entity_type": "JUDGE",
      "attribute": "name",
      "confidence": 0.9
    },
    {
      "pattern": "Filing Date[\\s:]*([0-9]{1,2}/[0-9]{1,2}/[0-9]{4})",
      "entity_type": "CASE",
      "attribute": "filing_date",
      "confidence": 0.95
    }
  ],
