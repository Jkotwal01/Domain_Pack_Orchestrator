  "multihop_questions": [
    {
      "template": "If {condition1}, then what are the implications for {entity}?",
      "examples": [
        "If the case is dismissed, then what are the implications for the client?",
        "If the contract is breached, then what are the implications for the parties?"
      ],
      "priority": "high",
      "reasoning_type": "causal"
    },
    {
      "template": "What would happen if {scenario} in this {context}?",
      "examples": [
        "What would happen if the deadline is missed in this litigation?",
        "What would happen if the settlement is rejected in this case?"
      ],
      "priority": "high",
      "reasoning_type": "hypothetical"
    },
    {
      "template": "How does {entity1} relate to {entity2} through {intermediary}?",
      "examples": [
        "How does the client relate to the court through the attorney?",
        "How does the case relate to the settlement through the negotiations?"
      ],
      "priority": "medium",
      "reasoning_type": "relational"
    }
  ],
  "business_rules": [
    {
      "name": "case_status_workflow",
      "description": "Valid case status transitions",
      "rules": [
        "filed -> active",
        "active -> settled",
        "active -> dismissed",
        "active -> judgment",
        "judgment -> appealed",
        "appealed -> affirmed",
        "appealed -> reversed"
      ]
    },
    {
      "name": "document_requirements",
      "description": "Required documents for different case types",
      "rules": [
        "civil_litigation: complaint, answer, discovery_documents",
        "criminal_case: indictment, plea, evidence",
        "contract_dispute: contract, correspondence, invoices",
        "employment_dispute: employment_agreement, termination_letter"
      ]
    },
    {
      "name": "deadline_calculations",
      "description": "Legal deadline calculations",
      "rules": [
        "filing_deadline: 3_years_from_cause_of_action",
        "appeal_deadline: 30_days_from_judgment",
        "response_deadline: 21_days_from_service",
        "discovery_deadline: 6_months_from_case_initiation"
      ]
    }
  ],
  "validation_rules": {
    "required_fields": {
      "case": ["case_number", "filing_date", "court"],
      "client": ["name", "contact_info"],
      "attorney": ["name", "bar_number"],
      "legal_document": ["document_type", "date", "author"]
    }
  }
